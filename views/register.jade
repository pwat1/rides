extends layout

block content
  .container
    h1 Register Page
    p.lead Say something worthwhile here.
    br
    form(role='form', action="/register",method="post", style='max-width: 300px;')
        .form-group
          input.form-control(type='text', name="username", placeholder='Enter Username')
        .form-group
          input.form-control(type='password', name="password", placeholder='Password')
        .form-group
          input.form-control(type='text', name="firstName", placeholder='First Name')
        .form-group
          input.form-control(type='text', name="lastName", placeholder='Last Name')
        .form-group
          input.form-control(type='text', name="phone", placeholder='Phone Number')
        .form-group
          input.form-control(type='text', name="email", placeholder='Enter Email')
        .form-group
          input.form-control(type='text', name="address", placeholder='Pickup Address')
        .form-group
          input.form-control(type='checkbox', name="canDrive") 
          = 'Willing to Drive Sometimes'
        button.btn.btn-default(type='submit') Submit
       
        a(href='/')
            button.btn.btn-primary(type="button") Cancel
    br
